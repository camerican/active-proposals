<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Our Class</title>
	<style>
	#notice {
		background-color: #C00;
		color: #fff;
		font-size: 2em;
		font-weight: bold;
	}
	</style>
</head>
<body>
	<% if flash[:notice] %>
	<div id="notice">
		<%= flash[:notice] %>
	</div>
	<% end %>
	<h1>Our Class</h1>
	<%= "Session:" + session[:user_id].to_s %>
	<%= @current_user %>
	<% if @current_user %>
		<h2>Welcome <%= @current_user.fname %>!!</h2>
		<a href="/logout">Log Out</a>
	<% end %>
	<%= erb :login unless @current_user %>
	<table>
	<tr>
		<th>First</th>
		<th>Last</th>
		<th>Proposals</th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.fname %></td>
			<td><%= user.lname %></td>
			<td><% if user.proposals %><ol>
			<% user.proposals.each do |proposal| %>
				<li><%= proposal.name %></li>
			<% end %>
			</ol>
				<% end %></td>
		</tr>
	<% end %>
	</table>
</body>
</html>